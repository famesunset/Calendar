@model IEnumerable<Business.Models.Calendar>

<div class="calendar-list-wrapper">
  <div id="create-calendar"></div>
  <div class="title-row">
    <h6>My calendars</h6>
    <div id="create-calendar-target">
      <i class="material-icons small">add</i>
    </div>
  </div>
  <div class="calendar-list">
    @foreach (var calendar in Model)
    {
    <div class="calendar">
      <input type="hidden" name="calendarId" value="@calendar.Id">
      <label>
        <input checked="true" class="filled-in display-calendar" type="checkbox" />
        <span>@calendar.Name</span>
      </label>
      <div class="delete-calendar waves-effect">
        <i class="material-icons tiny">close</i>
      </div>
    </div>
    }
  </div>
</div>